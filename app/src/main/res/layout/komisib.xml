<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/komisib"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     tools:context="com.example.muhammadrizqi.dprdjateng.profile_activity.komisi_profile.komisib">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/user_layout"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imgMovie"
                    android:src="@drawable/komisib_gambar2"
                    android:adjustViewBounds="false"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Bidang Perekonomian"
                    android:id="@+id/txtJudul"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:background="#96000000"
                    android:padding="10dp"
                    android:layout_gravity="bottom" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_below="@+id/user_layout"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bidang Perekonomian perindustrian dan energi, kelautan dan pertanian, koperasi, usaha mikro, kecil dan menengah dan perdagangan, pariwisata dan kebudayaan, penanaman modal dan promosi, ketahanan pangan, perhubungan, perikanan, peternakan, ketenagakerjaan dan transmigrasi, pemberdayaan aset/kekayaan daerah, perusahaan daerah."
                android:id="@+id/txtDeskripsi"

                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#96000000"
                android:padding="10dp"
                android:layout_gravity="bottom" />
            </LinearLayout>

        </RelativeLayout>

        </LinearLayout>
</ScrollView>
