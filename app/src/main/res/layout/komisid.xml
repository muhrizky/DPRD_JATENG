<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/komisid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.muhammadrizqi.dprdjateng.profile_activity.komisi_profile.komisid">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/user_layout"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imgMovie"
                    android:src="@drawable/komisid_gambar"
                    android:adjustViewBounds="false"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Bidang Pembangunan"
                    android:id="@+id/txtJudul"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:background="#96000000"
                    android:padding="10dp"
                    android:layout_gravity="bottom" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_below="@+id/user_layout"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Bidang Pembangunan meliputi pekerjaan umum, perumahan dan gedung pemerintah daerah, tata ruang, pengawasan dan penertiban bangunan, pertamanan dan pemakaman, kebersihan, pengelolaan lingkungan hidup daerah."
                    android:id="@+id/txtDeskripsi"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:textColor="#96000000"
                    android:padding="10dp"
                    android:layout_gravity="bottom" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
